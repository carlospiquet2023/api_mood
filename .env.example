# Configuração do Ambiente - Sistema de Diplomas

# === CONFIGURAÇÕES BÁSICAS ===
FLASK_APP=backend/app.py
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=sua_chave_secreta_muito_segura_aqui

# === CONFIGURAÇÕES DE UPLOAD ===
MAX_FILE_SIZE=50MB
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=pdf,zip

# === CONFIGURAÇÕES DE SESSÃO ===
SESSION_TIMEOUT=3600
SESSION_CLEANUP_INTERVAL=1800

# === CONFIGURAÇÕES DO MOODLE ===
MOODLE_URL=https://seu-moodle.com
MOODLE_TOKEN=seu_token_de_webservice_aqui
MOODLE_SERVICE=moodle_mobile_app

# === CONFIGURAÇÕES DE BANCO DE DADOS (OPCIONAL) ===
# Para conexão direta com banco do Moodle
MOODLE_DB_HOST=localhost
MOODLE_DB_PORT=3306
MOODLE_DB_NAME=moodle
MOODLE_DB_USER=moodle_user
MOODLE_DB_PASSWORD=moodle_password
MOODLE_DB_TYPE=mysql

# === CONFIGURAÇÕES DE QR CODE ===
QR_CODE_SIZE=10
QR_CODE_BORDER=4
QR_CODE_ERROR_CORRECTION=M

# === CONFIGURAÇÕES DE LOGGING ===
LOG_LEVEL=INFO
LOG_FILE=logs/diploma_system.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# === CONFIGURAÇÕES DE VERIFICAÇÃO ===
VERIFICATION_URL=https://seu-dominio.com/verify
ENABLE_ENCRYPTION=true

